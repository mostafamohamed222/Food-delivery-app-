import 'package:FoodDeliveryApp/Screens/bottomNavBar/bottomnavbar.dart';
import 'package:FoodDeliveryApp/Widget/CustomTextField.dart';
import 'package:flutter/material.dart';

class SginInScreen extends StatefulWidget {
  SginInScreen({Key key}) : super(key: key);

  @override
  _SginInScreenState createState() => _SginInScreenState();
}

class _SginInScreenState extends State<SginInScreen> {
  TextEditingController emailController = TextEditingController();
  TextEditingController passwordController = TextEditingController();

  GlobalKey<FormState> emailKey = GlobalKey<FormState>();
  GlobalKey<FormState> passwordKey = GlobalKey<FormState>();

  GlobalKey<FormState> _formKey = GlobalKey<FormState>();

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Container(
        margin: EdgeInsets.all(10.0),
        child: Form(
          key: _formKey,
          child: ListView(
            children: [
              SafeArea(
                child: Container(
                  margin: EdgeInsets.only(top: 10),
                  height: MediaQuery.of(context).size.height / 4,
                  decoration: BoxDecoration(
                    shape: BoxShape.circle,
                    image: DecorationImage(
                      image: AssetImage('assets/logo.jpg'),
                    ),
                  ),
                ),
              ),
              SizedBox(
                height: 10,
              ),
              CustomTextField(
                label: "Email",
                pre: Icons.email,
                scured: false,
                type: TextInputType.emailAddress,
                fieldKey: emailKey,
                controller: emailController,
              ),
              CustomTextField(
                label: "Password",
                pre: Icons.lock,
                type: TextInputType.text,
                scured: true,
                fieldKey: passwordKey,
                controller: passwordController,
              ),
              Align(
                alignment: Alignment.bottomRight,
                child: InkWell(
                  child: Text(
                    "Forget Password",
                    style: TextStyle(color: Colors.grey, fontSize: 15.0),
                  ),
                  onTap: () {},
                ),
              ),
              Builder(
                builder: (BuildContext context) {
                  return TextButton(
                    child: Text(
                      'Sign in',
                      style: TextStyle(
                          color: Colors.white,
                          fontSize: 20.0,
                          fontWeight: FontWeight.bold),
                    ),
                    style: ButtonStyle(
                      backgroundColor: MaterialStateProperty.all(Colors.black),
                    ),
                    onPressed: () {
                      if (!_formKey.currentState.validate()) {
                        Scaffold.of(context)
                            .showSnackBar(snack('Some Field Required!'));
                      } else {
                        Navigator.pushReplacement(context,
                            MaterialPageRoute(builder: (context) {
                          return BottomNavBar();
                        }));
                      }
                    },
                  );
                },
              )
            ],
          ),
        ),
      ),
    );
  }

  snack(String content) {
    return SnackBar(
      content: Text(content),
      duration: Duration(seconds: 3),
      backgroundColor: Colors.red,
    );
  }
}
